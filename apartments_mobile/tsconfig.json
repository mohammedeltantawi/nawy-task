{
	"extends": "@react-native/typescript-config/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-native",
		"lib": ["es2017"],
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"strict": true,
		"target": "esnext",
		"baseUrl": ".",
		"types": ["node"],
		"paths": {
			"_screens/*": ["src/screens/*"],
			"_assets": ["src/assets/"],
			"_assets/*": ["src/assets/*"],
			"_utilities": ["src/utilities/"],
			"_utilities/*": ["src/utilities/*"],
			"_network": ["src/network/"],
			"_network/*": ["src/network/*"],
			"_services": ["src/network/services/"],
			"_services/*": ["src/network/services/*"],
			"_constants": ["src/constants/"],
			"_models/": ["src/models/"],
			"_models/*": ["src/models/*"],
			"_components/": ["src/components/"],
			"_components/*": ["src/components/*"],
			"_urls": ["src/network/urls/"],
      		"_urls/*": ["src/network/urls/*"],
		},
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	]
}